<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DigimonAdventure.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/text16</item>
    </style>

    <style name="Theme.DigimonAdventure.TextViewVerySmall" parent="Theme.DigimonAdventure.TextView">
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/text12</item>
    </style>

    <style name="Theme.DigimonAdventure.TextViewSmall" parent="Theme.DigimonAdventure.TextView">
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/text14</item>
    </style>

    <style name="Theme.DigimonAdventure.TextViewLittleSmall" parent="Theme.DigimonAdventure.TextView">
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/text16</item>
    </style>

    <style name="Theme.DigimonAdventure.TextViewLittleMedium" parent="Theme.DigimonAdventure.TextView">
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/text18</item>
    </style>

    <style name="Theme.DigimonAdventure.TextViewMedium" parent="Theme.DigimonAdventure.TextView">
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/text24</item>
    </style>

    <style name="Theme.DigimonAdventure.TextViewMoreMedium" parent="Theme.DigimonAdventure.TextView">
        <item name="android:textSize" tools:ignore="SpUsage">@dimen/text30</item>
    </style>

</resources>
